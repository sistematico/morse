{
  "name": "morse",
  "description": "A chat app using Vite, Vue.js, Tailwind CSS in front-end and Hono and Drizzle ORM on back-end, both created with Bun.",
  "version": "1.0.0",
  "author": "Lucas Sali√©s Brum <paxa@paxa.dev> (https://paxa.dev)",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "f:dev": "cd apps/site && bun dev",
    "b:dev": "cd apps/api && bun dev",
    "clean": "rm -rf node_modules bun.lockb apps/*/node_modules apps/*/bun.lockb"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "sass": "^1.77.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "packageManager": "yarn@1.22.21+sha1.1959a18351b811cdeedbd484a8f86c3cc3bbaf72"
